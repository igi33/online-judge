<Page x:Class="OnlineJudgeWpfApp.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OnlineJudgeWpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="LoginPage">

    <StackPanel HorizontalAlignment="Left" Margin="20" Width="300">
        <TextBlock Text="Login" FontSize="25" />
        <TextBlock Text="Username:" Margin="0,15,0,0" />
        <TextBox x:Name="tbxUsername" Padding="5" />
        <TextBlock Text="Password:" Margin="0,5,0,0" />
        <PasswordBox x:Name="pbxPassword" Padding="5" />
        <Button x:Name="btnLogin" Content="Login" Padding="5" Margin="0,5,0,0" Click="btnLogin_Click" />
    </StackPanel>
</Page>
