<Page x:Class="OnlineJudgeWpfApp.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OnlineJudgeWpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="600"
      Style="{StaticResource PageFontStyle}"
      Title="RegisterPage">

    <StackPanel HorizontalAlignment="Left" Margin="20,0,20,20" Width="300">
        <TextBlock Text="Register" FontSize="25" />
        <TextBlock Text="Username:" Margin="0,15,0,0" />
        <TextBox x:Name="tbxUsername" Padding="5" />
        <TextBlock Text="Email:" Margin="0,5,0,0" />
        <TextBox x:Name="tbxEmail" Padding="5" />
        <TextBlock Text="Password:" Margin="0,5,0,0" />
        <PasswordBox x:Name="pbxPassword" Padding="5" />
        <Button x:Name="btnReg" Content="Register" Padding="5" Margin="0,5,0,0" Click="btnReg_Click" />
    </StackPanel>
</Page>
